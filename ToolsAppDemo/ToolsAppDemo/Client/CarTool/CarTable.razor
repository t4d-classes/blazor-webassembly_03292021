@using ToolsAppDemo.Shared

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var car in Cars)
    {
      <CarViewRow Car=@car OnDeleteCar="deleteCar" />
    }
  </tbody>
</table>

@code {
  [Parameter]
  public IEnumerable<Car> Cars { get; set; }

  [Parameter]
  public EventCallback<long> OnDeleteCar { get; set; }

  private async Task deleteCar(long carId)
  {
    await OnDeleteCar.InvokeAsync(carId);
  }
}
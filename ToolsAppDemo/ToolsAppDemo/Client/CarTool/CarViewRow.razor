@using ToolsAppDemo.Shared

<tr>
  <td>@Car.Id</td>
  <td>@Car.Make</td>
  <td>@Car.Model</td>
  <td>@Car.Year</td>
  <td>@Car.Color</td>
  <td>@Car.Price</td>
  <td><button type="button" @onclick=@(() => OnDeleteCar.InvokeAsync(Car.Id))>Delete</button></td>
  <td><button type="button" @onclick=@(() => OnEditCar.InvokeAsync(Car.Id))>Edit</button></td>
</tr>

@code {
  [Parameter]
  public Car Car { get; set; }

  [Parameter]
  public EventCallback<long> OnDeleteCar { get; set; }

  [Parameter]
  public EventCallback<long> OnEditCar { get; set; }


